<local:PageBase x:Class="GTA6Game.Pages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:local="clr-namespace:GTA6Game.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="710" d:DesignWidth="1200"
      Title="LoadingPage" Background="Black" x:Name="Windows" Loaded="Windows_Loaded">

    <Grid>
        <StackPanel x:Name="SpLoadingCircle" Height="300">
            <Label x:Uid="LbLoadingTitleUid" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Töltés, kérem várjon..." Foreground="White" FontSize="30" Margin="0,10" FontFamily="Arial Rounded MT Bold"></Label>
            <Image RenderOptions.BitmapScalingMode="HighQuality" gif:ImageBehavior.AnimatedSource="/Assets/LoadingSpinner.gif" Stretch="None" Height="208" Width="205"/>
        </StackPanel>
    </Grid>
</local:PageBase>
