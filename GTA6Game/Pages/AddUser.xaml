<local:PageBase x:Class="GTA6Game.Pages.AddUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GTA6Game.Pages" xmlns:usercontrols="clr-namespace:GTA6Game.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="710" d:DesignWidth="1200"
      Title="AddUser" Background="White">

    <Grid TextBlock.FontFamily="/GTA6Game;component/Assets/Fonts/#Source Sans Pro">
        <StackPanel>
            <usercontrols:LoginTitle></usercontrols:LoginTitle>


            <TextBlock x:Uid="NewUserTitleUid" TextAlignment="Center" Margin="30" Style="{StaticResource LoginTitle}" TextWrapping="Wrap" Text="Új felhasználó létrehozása"/>

            <Grid Width="500">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock x:Uid="TbAddUsernameUid" Margin="50,20,10,20" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Text="Felhasználónév:" FontSize="15"></TextBlock>
                <TextBox x:Name="TboxUsername" Width="256" Height="30" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="15"></TextBox>

                <TextBlock x:Uid="TbAddPasswordUid" Margin="50,20,10,20" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Text="Jelszó:" FontSize="15"></TextBlock>
                <PasswordBox x:Name="TboxPassword" Width="256" Height="30" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="15"></PasswordBox>

                <TextBlock x:Uid="TbAddPassword2Uid" Margin="50,20,10,20" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Text="Jelszó újra:" FontSize="15"></TextBlock>
                <PasswordBox x:Name="TboxPasswordCheck" Width="256" Height="30" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="15"></PasswordBox>

                <TextBlock x:Uid="TbAddBirthUid" Margin="50,20,10,20" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" Text="Születési idő:" FontSize="15"></TextBlock>
                <DatePicker x:Name="DpBirth" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Height="30" FontSize="15"/>

                <TextBlock x:Uid="TbAddLangUid" Margin="50,20,10,20" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" Text="Játéknyelv:" FontSize="15"></TextBlock>
                <ComboBox x:Name="CbLanguage" Grid.Row="4" HorizontalAlignment="Left" Height="30" Width="171" FontSize="15" Grid.ColumnSpan="2" Margin="166,15,0,15.8">
                    <ComboBoxItem Content="Magyar/Hungarian" FontSize="15"></ComboBoxItem>
                    <ComboBoxItem Content="Angol/English" FontSize="15"></ComboBoxItem>
                </ComboBox>
                <TextBlock x:Uid="TbAddEULAUid" Margin="50,20,10,20" Grid.Column="0" Grid.Row="5" TextWrapping="Wrap"  HorizontalAlignment="Left" Text="ÁSZF:" FontSize="15"></TextBlock>
                <StackPanel Grid.Column="1" Grid.Row="5" Height="40" Orientation="Horizontal">
                    <Viewbox Margin="10,0" Height="20">
                        <CheckBox x:Name="CbEULA" VerticalAlignment="Center"></CheckBox>
                    </Viewbox>
                    <TextBlock x:Uid="TbAddEULA2Uid" Text="Elfogadom az Adatvédelmi nyilatkozat §12.4/B1, ill. annak alárendelt pontjait!" FontSize="15" TextWrapping="Wrap" Width="293"/>
                </StackPanel>

            </Grid>

        </StackPanel>

        <TextBlock x:Uid="TbAddAvatarUid" HorizontalAlignment="Left" Text="Avatár:" FontSize="15" Margin="709,503,0,176.4" Width="67"/>
        <ComboBox x:Name="CbAvatar" HorizontalAlignment="Left" Height="30" Width="65" FontSize="15" Margin="785,499,0,181.4">
            <ComboBoxItem Content="1: All figures" FontSize="15"></ComboBoxItem>
        </ComboBox>
        <Button x:Uid="BtnAddBackLoginUid" x:Name="BtnLoginPage" Height="40" Style="{StaticResource OrangeButton}" Content="Vissza a kezdőlapra" FontSize="15" Margin="405,621,591,49.4" Click="BtnLoginPage_Click"/>
        <Button x:Uid="BtnSignUpUid" x:Name="BtnSignUp" Height="40" Style="{StaticResource PurpleButton}" Content="REGISZTRÁLÁS" Width="161" FontSize="15" Margin="689,621,0,49.4" HorizontalAlignment="Left" Click="BtnSignUp_Click"/>

    </Grid>
</local:PageBase>

